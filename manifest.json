{
    "manifest_version": 3,
    "name": "EasyReader",
    "version": "1.0.0",
    "description": "Ãœbersetzt texte in Einfache Sprache",
    "icons": {
        "128": "EasyReader/public/icon.png"
    },
    "action": {
        "default_popup": "EasyReader/src/popup/popup.html",
        "default_icon": "EasyReader/public/icon.png"
    },
    "background": {
        "service_worker": "EasyReader/src/background/index.js",
        "type": "module"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "storage",
        "tabs",
        "contextMenus",
        "alarms"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "EasyReader/src/content/main.js"
            ]
        }
    ]
}